page{
  background: #000;
}
.search_box{
  display: flex;
  width:100%;
  height: 100rpx;
  flex-direction: row;
  justify-content: space-between;
}
.search_box input{
  box-sizing: border-box;
  width: 70%;
  margin-left:30rpx;
  background: #707070;
  height: 100%; 
  color: #cecece;
  border-radius: 50rpx;
  padding-left: 50rpx;
}

.search_box button{
  width: 20%;
  background: #707070;
  color: #cecece;
  height: 100%;
}
.scroll_view{
  margin-top: 50rpx;
}
.my_container{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  box-sizing: border-box;
  background: #000;
}

.left{
  width: 14%;
  height: 100%;
}

.left image{
  width: 100%;
  height: 100%;
}
.right{
  display: flex;
  flex-direction: row;
  width: 86%;
  height: 100%;
}

.descript{
  width: 85%;
  height: 100%;
}

.play_icon{
  position: relative;
  width: 15%;
  height:100%;
}

.play_icon image{
  position: absolute;
  display: block;
  width: 30px;
  height: 30px;
  left: 50%;
  top: 50%;
  margin-left: -15px;
  margin-top: -15px;
}

.m_title{
  margin-top: 5px;
  padding-left: 10px;
  color: #fff;
  font-size: 15px;
  overflow: hidden;
  height: 35rpx;
} 

.m_info{
  padding-left: 10px;
  margin-top: 10px;
  font-size: 10px;
  color: #cecece;
  overflow: hidden;
}
