page{
  background: #000;
  color:  #aaa;
}
.header{
  width: 100%;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.header-bg{
  position: fixed;
  width: 100%;
  height: 100%;
  filter:blur(50rpx) brightness(0.3);
  background-size: cover;
  z-index: -1;
}
.userinfo-nickname {
  color: #aaa;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  display:block; 
  overflow:hidden; 
  border-radius: 50%;
}

.title{
  padding:40rpx;
  font-size: 35rpx;

}

.scroll_view{
  margin-top: 50rpx;
}
.my_container{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  box-sizing: border-box;
  background: #000;
}

.left{
  width: 14%;
  height: 100%;
}

.left image{
  width: 100%;
  height: 100%;
}
.right{
  display: flex;
  flex-direction: row;
  width: 86%;
  height: 100%;
}

.descript{
  width: 85%;
  height: 100%;
}

.play_icon{
  position: relative;
  width: 15%;
  height:100%;
}

.play_icon image{
  position: absolute;
  display: block;
  width: 30px;
  height: 30px;
  left: 50%;
  top: 50%;
  margin-left: -15px;
  margin-top: -15px;
}

.m_title{
  margin-top: 5px;
  padding-left: 10px;
  color: #fff;
  font-size: 15px;
  overflow: hidden;
  height: 35rpx;
} 

.m_info{
  padding-left: 10px;
  margin-top: 10px;
  font-size: 10px;
  color: #cecece;
  overflow: hidden;
}

